@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h1>Add Client</h1>
@using (Html.BeginForm())
{
  <div class="form-group">
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required="required"})
  </div>
  <div class="form-group">
  @Html.LabelFor(model => model.Notes)
  @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
  </div>
  <div class="form-group">
  @Html.LabelFor(model => model.StylistId, "Stylist")
  @Html.DropDownList("StylistId",ViewBag.StylistId,"Add Stylist",new { @class = "form-control", required="required"})
  </div>
  <input type="submit" value="Add Client" class="btn btn-success btn-center" />
}