@{
  Layout = "_Layout";
}
@using HairSalon.Models;


<h1>Hair Salon</h1>
@if (@Model.Count == 0)
{
  <h3>No Stylists currently registered</h3>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink("View", "Details", new { id = stylist.StylistId })  |  @stylist.Name  |  @stylist.CustomerCount  |  @stylist.StartDate</li>
  }
</ul>

<p>@Html.ActionLink("Add Stylist", "Create")</p>