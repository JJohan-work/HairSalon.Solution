@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Details of @ViewBag.stylist.Name</h1>

<div class="PageAction">
  <p>@Html.ActionLink("Back to Stylists","Index")</p>
  <p>@Html.ActionLink("Add new Client", "Create", "Client", new {id = ViewBag.stylist.StylistId})</p>
</div>

@* details  of stylist *@
<div class="container">
  <div class="row">
    <div class="col"><h2>@ViewBag.stylist.Name</h2></div>
    <div class="col-4">@ViewBag.stylist.Notes</div>
  </div>
</div>

@* list of clients *@
<h2>List of Client</h2>
@if (ViewBag.clients.Count == 0)
{
  <h2>No Clients currently registered</h2>
}
else
{
  <ol>
  @foreach (Client client in ViewBag.clients)
  {
    <li>@client.Name</li>
  }
  </ol>
}