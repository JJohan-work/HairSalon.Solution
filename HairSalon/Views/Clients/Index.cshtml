@{
  Layout = "_Layout";
}
@using HairSalon.Models;


<h1>Clients</h1>
<div class="PageAction">
  <p class="btn btn-info black">@Html.ActionLink("Add New Client", "Create")</p>
</div>

<div class="TableContainer">
  <div class="container">
    @if (@Model.Count == 0)
    {
      <h3>No Clients currently registered</h3>
    }
    else
    {
      <div class="row TableHeader">
        <div class="col-1"></div>
        <div class="col">Name</div>
        <div class="col">Assigned Stylist</div>
        <div class="col-2">Delete</div>
      </div>
    }

    @foreach (Client client in Model)
    {
      <div class="row TableEntry">
      <div class="col-1">
        <p class="BlueBtn TableButton black BtnSpacer">@Html.ActionLink("Edit","Edit","Clients", new { id = client.ClientId})</p>
      </div>
      <div class="col">@client.Name</div>
      <div class="col">
        @if (client.StylistId != 0)
        {
          @ViewBag.Stylists[client.StylistId];
        }
        else
        {
          <p>Not Assigned</p>
        }
      </div>
      <div class="col-2"><p class = "TableButton RedBtn black BtnSpacer">@Html.ActionLink("Delete","Delete","Clients", new { id = client.ClientId})</p></div>
      </div>
    }
    <div class="row TableFooter"></div>
  </div>
</div>