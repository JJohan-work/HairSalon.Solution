@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h1>Add Client</h1>
@using (Html.BeginForm())
{
  <div class="form-group">
  @Html.HiddenFor(model => model.ClientId)
  </div>
  <div class="form-group">
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  </div>
  <div class="form-group">
  @Html.LabelFor(model => model.Notes)
  @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
  </div>
  <div class="form-group">
  @Html.LabelFor(model => model.StylistId, "Stylist")
  @Html.DropDownList("StylistId",ViewBag.Stylists,"Edit Stylist",new { @class = "form-control" })
  </div>
  <button class="btn btn-danger black btn-center">@Html.ActionLink("Cancel", "Index")</button>
  <input type="submit" value="Edit Client" class="btn btn-success btn-center" />
}